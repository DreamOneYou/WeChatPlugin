<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
         <category
            name="SmartWeChat"
            id="cn.ieclipse.smartim">
      </category>
      <view
            category="cn.ieclipse.smartim"
            class="cn.ieclipse.wechat.WXContactView"
            icon="icons/wechat.png"
            id="cn.ieclipse.wechat.views.WXContactView"
            name="Wechat"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="cn.ieclipse.smartim.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
         <page
            class="cn.ieclipse.smartim.preferences.SmartWeChatPreferencePage"
            id="cn.ieclipse.smartim.preferences.SmartWeChatPreferencePage"
            name="SmartWeChat">
      </page>
      <page
            category="cn.ieclipse.smartim.preferences.SmartWeChatPreferencePage"
            class="cn.ieclipse.smartim.preferences.HotKeyPreferencePage"
            id="cn.ieclipse.smartim.preferences.HotKeyPreferencePage"
            name="Hot keys">
      </page>
      <page
            category="cn.ieclipse.smartim.preferences.SmartWeChatPreferencePage"
            class="cn.ieclipse.smartim.preferences.SettingsPerferencePage"
            id="cn.ieclipse.smartim.preferences.SettingsPerferencePage"
            name="Settgins">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:#AbstractTextEditorContext">
         <command
               commandId="cn.ieclipse.smartqq.command.CodeReview"
               icon="icons/review.png"
               label="Code Review"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="cn.ieclipse.smartqq.command.CodeReview"
            name="Code Review">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="cn.ieclipse.smartim.handlers.ReviewHandler"
            commandId="cn.ieclipse.smartqq.command.CodeReview">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
   </extension>
</plugin>
